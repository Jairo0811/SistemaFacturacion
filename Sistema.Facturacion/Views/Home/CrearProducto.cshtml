@model Producto

@{
    ViewData["Title"] = "Crear Producto";
}

<div class="page-header text-center" style="color:white; background-color:darkslategrey; padding:40px">
    <h1>Crear Producto</h1>
</div>
<br />
<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <!-- Nombre -->
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <!-- Precio -->
    <div class="form-group">
        <label asp-for="Precio"></label>
        <input type="number" asp-for="Precio" class="form-control" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>
    <!-- Submit -->
    <div class="form-group ">
        <button type="submit" class="btn btn-primary btn-lg btn-block login-button">Crear Producto</button>
    </div>
</form>

